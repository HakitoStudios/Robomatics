<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchParent">

    <android.support.v7.widget.LinearLayoutCompat
        style="@style/MatchParent.Vertical"
        android:padding="8dp">

        <android.support.v7.widget.LinearLayoutCompat style="@style/WideContent.Horizontal">

            <include layout="@layout/view_likes" />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/code_edit_text"
            style="@style/MatchParent" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/try_out_fab"
        style="@style/WrapContent"
        android:layout_gravity="bottom|right" />
</android.support.v7.widget.ContentFrameLayout>
