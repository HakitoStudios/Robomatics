<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Toolbar">
        <item name="titleTextColor">#fff</item>
    </style>

    <style name="FAB" parent="WrapContent">
        <item name="android:layout_margin">24dp</item>
        <item name="android:layout_gravity">bottom|right</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="WrapContent.Ripple">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="WrapContent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapContent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MatchParent.Ripple">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="MatchParent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchParent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WideContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WideContent.Ripple">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="WideContent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WideContent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TallContent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TallContent.Ripple">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TallContent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TallContent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>
    <!--Global nav-->
    <style name="GlobalGridNavButton" parent="WideContent">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
